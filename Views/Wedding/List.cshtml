<h1>Welcome to the Wedding Planner</h1>

<table>
    <tr>
        <th>Wedding</th>
        <th>Date</th>
        <th>Guests</th>
    </tr>
    @foreach(var wedding in ViewBag.weddings)
    {
        <tr>
            <td>
                <a asp-controller="Wedding" asp-action="detail">
                    @wedding.newleywedOne & @wedding.newlywedTwo
                </a>
            </td>
            <td>@wedding.date.ToString("d")</td>
            <td>@wedding.guests.Count</td>
        </tr>
    }
</table>

<a asp-area="" asp-controller="Wedding" asp-action="add">Home</a>